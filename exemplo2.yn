function letraT() {
    // Cria a letra T

    doubleCrochet(1);  // Faz 2 pontos baixos
    changeYarn("yellow"); // Muda a cor do fio para amarelo
    doubleCrochet(3);  // Faz 2 pontos baixos
    changeYarn("black"); // Muda a cor do fio para preto
    doubleCrochet(1);  // Faz 2 pontos baixos
    turnWork();  // Vira o trabalho

    var i;

    repeat i from 1 to 3 {
        changeYarn("black"); // Muda a cor do fio para preto
        doubleCrochet(2);  // Faz 1 ponto baixo
        changeYarn("yellow"); // Muda a cor do fio para amarelo
        doubleCrochet(1);  // Faz 1 ponto baixo
        changeYarn("black"); // Muda a cor do fio para preto
        doubleCrochet(2);  // Faz 1 ponto baixo
        turnWork();  // Vira o trabalho
    }
    doubleCrochet(5);  // Faz 5 pontos baixos
    turnWork();  // Vira o trabalho
};

